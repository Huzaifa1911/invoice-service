# Build the docker image with `npx nx docker-build invoice-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t invoice-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system invoice-app && \
          adduser --system -G invoice-app invoice-app

COPY apps/invoice-app/dist invoice-app/
RUN chown -R invoice-app:invoice-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix invoice-app --omit=dev -f install

CMD [ "node", "invoice-app" ]
